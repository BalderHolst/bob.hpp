#!/usr/bin/env python3
import os
import subprocess

SRC = "./bob.cpp"
BIN = "./bob"

# Compile the test binary if it does not exist
if not os.path.exists(BIN):
    print(f"Compiling {SRC} to {BIN}...")
    subprocess.run(["g++", SRC, "-o", BIN], check=True)

# Run the test binary
subprocess.run([BIN, "test"], check=True)
